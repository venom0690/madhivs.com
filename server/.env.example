# Environment Variables
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=5000

# MySQL Database (XAMPP/WAMP)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=maadhivs_boutique

# JWT — CHANGE THIS IN PRODUCTION (min 32 chars)
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_32_CHAR_STRING
JWT_EXPIRES_IN=7d

# Admin Defaults (for seed script)
ADMIN_EMAIL=admin@maadhivs.com
ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Frontend URL (for CORS) — comma-separated for multiple origins
FRONTEND_URL=http://localhost:5000
