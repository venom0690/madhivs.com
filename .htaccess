# ============================================
# 15. PERFORMANCE OPTIMIZATIONS
# ============================================

# Enable Keep-Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Disable ETags (use Cache-Control instead)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# ============================================
# 16. BLOCK BAD BOTS AND SCRAPERS
# ============================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block bad bots
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^.*(bot|crawl|spider|scrape|harvest).*$ [NC]
    RewriteCond %{HTTP_USER_AGENT} !^.*(google|bing|yahoo|duckduckgo).*$ [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# ============================================
# 17. RATE LIMITING (Basic)
# ============================================

# Note: For better rate limiting, use Node.js middleware
# This is just basic Apache-level protection

<IfModule mod_evasive.c>
    DOSHashTableSize 3097
    DOSPageCount 10
    DOSSiteCount 100
    DOSPageInterval 1
    DOSSiteInterval 1
    DOSBlockingPeriod 10
</IfModule>

